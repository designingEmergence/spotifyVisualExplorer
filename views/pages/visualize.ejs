
<html lang="en">
	<head>
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
		<h1> Visualize Artists</h1>
		<script> var artistList = <%- JSON.stringify(artists) %>;</script>
		<script src='/d3/d3.min.js'></script>
		<script src='/js/artistNodeGraph.js'></script>
	</head>

	<body>
		<div class = 'chart' id="primaryVisualizer">
			<svg>
				<!-- <% artists.forEach(function(artist){ %>
					<circle cx="480" cy="250" r ="10"></circle>
				<% }); %> -->
			</svg>
		</div>
		<script>
			var graph = artistNodeGraph().width(1200).height(600);
			d3.select('#primaryVisualizer').datum(artistList).call(graph);
		</script>

		<h2 class="text-center text-muted">Artists to Visualize</h2>
		<ul>
			<% artists.forEach(function(artist){ %>
				<li><%= artist.name %> - <%= artist.count %></li>
			<% }); %>
		</ul>

	</body>
</html>